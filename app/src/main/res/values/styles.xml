<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Full" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AppTheme.Splash" parent="AppTheme.Full">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="TabSelect" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/button</item>
        <item name="android:textSize">10sp</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">#000000</item>
        <item name="android:textAppearance">@style/Base.Widget.AppCompat.EditText</item>
    </style>

</resources>
