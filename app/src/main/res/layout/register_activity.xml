<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register_backgroud">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarPopupTheme">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/register"
                android:textColor="@color/login_color"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/back_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/back"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/toolbar2"
        android:layout_marginEnd="81dp"
        android:layout_marginLeft="81dp"
        android:layout_marginRight="81dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="42dp"
        android:divider="@drawable/line_decoration"
        android:showDividers="middle"
        android:dividerPadding="0.5dp"
        android:orientation="vertical"
        android:weightSum="4">

        <EditText
            android:id="@+id/register_ac_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:inputType="text"
            android:background="@null"
            android:hint="@string/register_phone_number"
            android:singleLine="true"
            android:textColorHint="@color/register_hint"
            android:textCursorDrawable="@drawable/line_decoration"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/register_ac_0"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/user_name_log"
            android:singleLine="true"
            android:textColorHint="@color/register_hint"
            android:textCursorDrawable="@drawable/line_decoration"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/register_ac_2"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/password"
            android:singleLine="true"
            android:textColorHint="@color/register_hint"
            android:textCursorDrawable="@drawable/line_decoration"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/v_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:divider="@drawable/line_decoration"
            android:showDividers="end"
            android:layout_weight="1"
            android:dividerPadding="0.8dp"
            android:weightSum="5">

            <EditText
                android:id="@+id/register_ac_3"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:background="@null"
                android:hint="@string/verification_code"
                android:textColorHint="@color/register_hint"
                android:textSize="14sp"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/register_get"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="@drawable/rim_verification"
                android:gravity="center"
                android:text="@string/get_verification"
                android:textColor="@color/verification_color"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/linear_layout"-->
        <!--android:layout_marginEnd="81dp"-->
        <!--android:layout_marginLeft="81dp"-->
        <!--android:layout_marginRight="81dp"-->
        <!--android:layout_marginStart="81dp"-->
        <!--android:layout_marginTop="13dp"-->
        <!--android:src="@drawable/line_decoration"-->
        <!--tools:ignore="ContentDescription" />-->

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginRight="78dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="55dp"
        android:background="#8C8C8C"
        android:text="@string/register"
        android:textColor="@color/Whilt"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/pass"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_next"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="@string/register_tip"
        android:textColor="@color/verification_color"
        android:textSize="13sp" />
</RelativeLayout>
