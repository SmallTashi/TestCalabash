<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:background="@color/Whilt"
    android:padding="10dp"
    android:id="@+id/theme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/theme_head"
        android:src="@mipmap/ic_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/theme_id"
        android:textColor="#000000"
        android:textSize="18sp"
        tools:text="中山站"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/theme_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/theme_head"
        android:layout_marginStart="5dp"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:id="@+id/theme_share"
        android:background="@color/Whilt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2.5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/recommend_share"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/theme_add"
        android:padding="2.5dp"
        android:layout_centerVertical="true"
        android:background="@color/Whilt"
        android:layout_toLeftOf="@id/theme_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/recommend_subscribe_default"
        tools:ignore="ContentDescription"
        android:layout_marginRight="15dp"
        android:layout_toStartOf="@id/theme_share"
        android:layout_marginEnd="15dp" />
</RelativeLayout>
    <ImageView
        android:id="@+id/theme_article_img"
        android:layout_below="@id/theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_detail"
        tools:ignore="ContentDescription" />

</RelativeLayout>