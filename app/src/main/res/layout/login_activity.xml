<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbg">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@mipmap/logo_big"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="210dp"
        android:alpha="0.5"
        android:background="@drawable/background_login">

        <EditText
            android:id="@+id/edit_phonenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:cursorVisible="false"
            android:digits="123456789.@zxcvbnmlkjhfgdsaqwertyuiopQWERTYUIOPASDFGHJKLZXCVBNM"
            android:drawableLeft="@mipmap/signin_phone"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/signin_phone"
            android:hint="@string/phonenum"
            android:padding="8sp"
            android:singleLine="true"
            android:textColor="@color/Whilt"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/relativeLayout2"
        android:layout_alignLeft="@id/relativeLayout2"
        android:layout_alignRight="@id/relativeLayout2"
        android:layout_alignStart="@id/relativeLayout2"
        android:layout_below="@id/relativeLayout2"
        android:layout_marginTop="36dp"
        android:alpha="0.5"
        android:background="@drawable/background_login"
        tools:ignore="PrivateResource">

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:cursorVisible="false"
            android:digits="123456789.@zxcvbnmlkjhfgdsaqwertyuiopQWERTYUIOPASDFGHJKLZXCVBNM"
            android:drawableEnd="@mipmap/see_passwd"
            android:drawableLeft="@mipmap/signin_password"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/see_passwd"
            android:drawableStart="@mipmap/signin_password"
            android:hint="@string/password"
            android:padding="8sp"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            tools:ignore="Deprecated,TextFields" />

    </RelativeLayout>

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/logo"
        android:layout_alignRight="@+id/logo"
        android:layout_below="@+id/relativeLayout5"
        android:layout_marginTop="12dp"
        android:text="@string/forgot_password"
        android:textColor="@color/Whilt"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/forget_password"
        android:layout_alignBottom="@+id/forget_password"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/forget_password"
        android:layout_toRightOf="@+id/forget_password"
        android:text="@string/line"
        android:textColor="@color/Whilt"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView3"
        android:layout_alignBottom="@id/textView3"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/textView3"
        android:layout_toRightOf="@id/textView3"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/register"
        android:textColor="#E9CF07"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/relativeLayout5"
        android:layout_alignRight="@+id/relativeLayout5"
        android:layout_below="@+id/relativeLayout5"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="42dp"
        android:alpha="0.8"
        android:background="@color/login_button">

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/login"
            android:textColor="@color/login_color"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/line_next"
        android:textColor="@color/Whilt"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/tip"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tip"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="23dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/WX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/weixin_logo"
            android:contentDescription="@string/wx_image_description" />

        <ImageView
            android:id="@+id/QQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/qq_logo"
            android:contentDescription="@string/qq_image_description" />

        <ImageView
            android:id="@+id/WB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/weibo_logo"
            android:contentDescription="@string/wb_image_description" />

    </LinearLayout>


</RelativeLayout>